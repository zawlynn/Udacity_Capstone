<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <data class="BindingHomeFrag"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.fragment.HomeFragment">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/small_margin"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/recommendations"
                    android:textColor="@drawable/genre_background"
                    android:textSize="@dimen/sub_menu_size" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_recommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/genre"
                    android:textColor="@drawable/genre_background"
                    android:textSize="@dimen/sub_menu_size" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/curated"
                    android:textColor="@drawable/genre_background"
                    android:textSize="@dimen/sub_menu_size" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_curated_podcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small_margin"
                    android:text="@string/you_might_like"
                    android:textColor="@drawable/genre_background"
                    android:textSize="@dimen/sub_menu_size" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_new_podcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </FrameLayout>
</layout>
